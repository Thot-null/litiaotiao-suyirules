div.toast
  max-width: 60%
  padding: 1rem 3rem
  line-height: 1.5
  color: var(--text-p1)
  font-weight: 500
  text-align: center
  border-radius: $border-card
  background: var(--card)
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  z-index: 9
  disable-select()
  box-shadow: $boxshadow-float
